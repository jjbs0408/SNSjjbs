<div class="container">
  <div class="row">
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <img src="http://materializecss.com/images/office.jpg" />
        </div>
        <div class="card-content">
          <div class="card-title"><%= current_user.name %></div>
          <p>이메일 : <%= current_user.email %></p>
          <p>올린 글 개수 : <%= @posts_count %></p>
          <p>팔로워 : <a href="/followers"><%=current_user.followers.length%></a></p>
          <p>팔로잉 : <a href="/followings"><%=current_user.followings.length%></a></p>
          <%= link_to new_post_path do %>
              <button class="btn">글 쓰기</button>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col s12 m8">
      <% current_user.followings.each do |f|%>
      <% f.posts.each do |post| %>
          <%= render partial: "post", object: post %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
